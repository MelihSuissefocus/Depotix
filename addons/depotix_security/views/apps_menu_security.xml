<odoo noupdate="1">
  <!-- Nur Benutzer mit Technical Features dürfen das Apps-Menü sehen -->
  <record id="base.menu_apps" model="ir.ui.menu">
    <field name="groups_id" eval="[(6, 0, [ref('base.group_no_one')])]"/>
  </record>

  <!-- Härtung: Die zugehörige Aktion (Apps-Liste) ebenfalls nur für Technical Users -->
  <record id="base.open_module_tree" model="ir.actions.act_window">
    <field name="groups_id" eval="[(6, 0, [ref('base.group_no_one')])]"/>
  </record>
</odoo>